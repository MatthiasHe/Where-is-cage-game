<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.he.matt.wheresaldo.MainActivity">


    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:onClick="modeOneLaunch"
            android:text="@string/mode_one"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:onClick="modeTwoLaunch"
            android:text="@string/mode_two"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="197dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:onClick="hallOfFameLaunch"
            android:text="@string/hall_of_fame"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="378dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yo"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="153dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
